<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="gesca_import_proj_wizard" model="ir.ui.view">
        <field name="name">gesca.import.proj.wizard</field>
        <field name="model">import.proj.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Projects">
                <group>
                    <field name="import_type" widget="radio" />
                    <field name="file" />
                </group>
                <footer>
                    <button name="update_projects" string="Apply" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="gesca_import_proj_action" model="ir.actions.act_window">
        <field name="name">Update Projects</field>
        <field name="res_model">import.proj.wizard</field>
        <field name="view_id" ref="gesca_import_proj_wizard" />
        <field name="target">new</field>
    </record>
</odoo>
