<?xml version="1.0" encoding="utf-8"?>
<odoo>
 
<!-- Declared the same in every module that may need it -->
    <record id="gesca_all_in_one_basic_import_inherit" model="ir.ui.view">
        <field name="name">gesca.all.in.one.basic.import.inherit</field>
        <field name="model">sh.all.in.one.basic.kanban</field>
        <field name="inherit_id" ref="sh_all_in_one_basic_import.sh_all_in_one_basic_import_kanban" />
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_kanban_global_click']/div[@class='row'][3]" position="inside">
                <div class="col-3">
                    <button name="%(gesca_basic_import_extension.gesca_import_proj_action)d" type="action" string="Update Project" class="btn btn-primary">
                        Update Project
                    </button>
                </div>
                
                <div class="col-3">
                    <button name="%(gesca_basic_import_extension.gesca_import_proj_task_action)d" type="action" string="Update Project Task" class="btn btn-primary">
                        Update Project Task
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>