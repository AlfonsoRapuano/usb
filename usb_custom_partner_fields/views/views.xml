<odoo>
  <data>
      <!-- Declared the same in every module that may need it -->
    <record id="usb_custom_fields" model="ir.ui.view">
        <field name="name">USB Custom Fields</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page
                    name="usb_custom_fields"
                    string="USB Custom Fields"
                >
                    <!-- informazioni anagrafiche -->
                    <group name="informazioni_anagrafiche" string="Informazioni Anagrafiche" attrs="{'invisible': [('is_company','=',True)]}" >
                        <field name="gender" />
                        <field name="nato_il" />
                        <field name="luogo_di_nascita" />
                        <field name="provinca_di_nascita" />
                        <field name="doc_type" />
                        <field name="doc_num" />
                        <field name="doc_emesso_il" />
                        <field name="doc_scadenza" />
                        <field name="luogo_emissione_documento" />
                    </group>
                    
                    <!-- informazioni tecniche -->
                    <group name="informazioni_tecniche" string="Informazioni Tecniche" attrs="{'invisible': [('is_company','=',False)]}" >
                        <field name="associazione" />
                        <field name="des_categoria_merceologica" />
                        <field name="des_gruppo_anagrafica" />
                        <field name="des_agente_anagrafica" />
                        <field name="des_attivita" />
                        <field name="fatturazione_country_id" />
                    </group>
                    
                    <!-- informazioni varie -->
                    <group name="informazioni_varie" string="Varie" attrs="{'invisible': [('is_company','=',False)]}" >
                        <field name="id_cliente_USB" />
                        <field name="vies" />
                        <field name="split_payment" />
                        <field name="tipo_esenzione" />
                        <field name="gdpr1" />
                        <field name="gdpr2" />
                        <field name="anag_da_escludere" />
                        <field name="data_ins_canc_newsletter" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
  </data>
</odoo>