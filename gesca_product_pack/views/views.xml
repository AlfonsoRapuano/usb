<odoo>
  <data>
      <record id="sale_order_form_view" model="ir.ui.view">
            <field name="name">sale.order.form.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="after">
                    <field name="is_pack" invisible="1"/>
                    <field name="pack_parent_line_id" invisible="1"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree" position="attributes">
                    <attribute name="decoration-bf">is_pack</attribute>
                </xpath>
                <!-- rendiamo i campi delle righe NON pack non modificabili -->
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="attrs">{'readonly':[('pack_parent_line_id','!=',False)]}</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='name']" position="attributes">
                    <attribute name="attrs">{'readonly':[('pack_parent_line_id','!=',False)]}</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='admin_ref']" position="attributes">
                    <attribute name="attrs">{'readonly':[('pack_parent_line_id','!=',False)]}</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="attributes">
                    <attribute name="attrs">{'readonly':[('pack_parent_line_id','!=',False)]}</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="attrs">{'readonly':[('pack_parent_line_id','!=',False)]}</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='tax_id']" position="attributes">
                    <attribute name="attrs">{'readonly':[('pack_parent_line_id','!=',False)]}</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='discount']" position="attributes">
                    <attribute name="attrs">{'readonly':[('pack_parent_line_id','!=',False)]}</attribute>
                </xpath>
            </field>
        </record>
  </data>
</odoo>